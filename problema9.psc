	// Definir variables
	
	Definir numeroIngresado, antecesor, sucesor Como Entero;
	
	// Procesos
	
	Escribir ' Ingrese un número';
	Leer numeroIngresado;
	
	antecesor <- numeroIngresado-1;
	sucesor <- numeroIngresado+1;
	
	// Resultado
	
	Escribir 'El antecesor de ', numeroIngresado, ' es ', antecesor, ' y su sucesor es ', sucesor;
FinProceso
